@model DocumentViewModel

<html>
<head>
    @if (!string.IsNullOrWhiteSpace(Model.Title))
    {
        ViewData["Title"] = Model.Title;

        <title>@ViewData["Title"]</title>
    }

    @if (!string.IsNullOrWhiteSpace(Model.Description))
    {
        <meta name="description" content="@Model.Description">
    }

    @if (!string.IsNullOrWhiteSpace(Model.Description))
    {
        <meta name="keywords" content="@Model.Keywords">
    }
</head>
<body>
    <partial name="Breadcrumb" model="@Model.Breadcrumb" />

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DocumentId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DocumentId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IncludeInSitemap)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IncludeInSitemap)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contents)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Contents)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastReviewed)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastReviewed)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>