@model BreadcrumbViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="govuk-breadcrumbs">
    <ol class="govuk-breadcrumbs__list">
        @if (Model.Paths?.Count() > 0)
        {
            @foreach (var path in Model.Paths)
            {
                if (!path.IsLastItem)
                {
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="@path.Route">@path.Title</a>
                    </li>
                }
                else
                {
                    <li class="govuk-breadcrumbs__list-item" aria-current="page">@path.Title</li>
                }
            }
        }
    </ol>
</div>
